<Page x:ConnectionId='1'
    x:Class="SDKTemplate.Scenario2_Client"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:SDKTemplate"
    mc:Ignorable="d">
    <ScrollViewer Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Padding="12,10,12,12">
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions >
                    <RowDefinition Height = "*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width = "40" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:ConnectionId='7' Grid.Row = "0"  Grid.Column="0" Margin="0,5,0,0" VerticalAlignment="Top" Content="&lt;"                                       />
                <TextBlock Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Text="Stream HR data:" Style="{StaticResource SampleHeaderTextStyle}"/>
            </Grid>
            <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" Text="Stream Heart rate and RR interval data to selected file"/>
            <Grid>
                <Grid.RowDefinitions >
                    <RowDefinition Height = "*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width = "250" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:ConnectionId='5' Grid.Row="0"   Grid.Column="0" x:Name="FilePath" PlaceholderText="Enter file path"/>
                <Button x:ConnectionId='6' Grid.Row = "0"  Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Top" Content="Choose"                                          />
            </Grid>
            <TextBlock Style="{StaticResource ListItemTextStyle}" TextWrapping="Wrap" Margin="0,10,0,0"><Run Text="Selected device: "/><Run x:ConnectionId='4' x:Name="SelectedDeviceRun" FontWeight="Bold"/></TextBlock>
            <Button x:ConnectionId='2' x:Name="ConnectButton" Content="Start Stream"                                           Margin="0,10,0,0"/>
            <TextBlock x:ConnectionId='3' x:Name="CharacteristicLatestValue" Margin="0,10,0,0"/>
        </StackPanel>
    </ScrollViewer>
</Page>

